#:kivy 1.0.9 

<BlackJack>: 
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'background.png'
    
    Label:
        font_size: 70
        pos_hint: {'center_x': 0.5, 'center_y':0.9}
        text: root.p_name
    
    Label:
        font_size: 35
        pos_hint: {'center_x':0.1, 'center_y':0.1}
        text: "Score: "
    Label:
        font_size: 35
        pos_hint: {'center_x':0.2, 'center_y':0.1}
        text: root.p_score
        color: root.text_color
    Button:
        pos_hint: {'center_x': 0.7, 'center_y':0.1}
        size_hint: (.2, .2)
        text:"Hit"
        on_press: root.hit()

    Button:
        size_hint: (.20, .20)
        pos_hint: {'center_x': .9, 'center_y':.1}
        text:"Stick"
        on_press: root.stick()